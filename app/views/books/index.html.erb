<% provide(:page_title, 'Kategori Buku') %>
<% provide(:book, 'active') %>

<h3>Kategori Buku</h3><br/>

<div class="container">
<div class="row">
  <div class="col-md-4 col-md-8">
    <%= link_to 'Create', new_book_path, class: 'btn btn-primary btn-lg' %>
  </div>

  <form class="form-inline">
  <%= form_tag books_path, method: :get do %>
      <%= text_field_tag :search, params[:search], class: 'form-control mb mr-sm-2'%>
      <%= submit_tag "Search", class: 'btn btn-primary btn-md'%>
  <% end %>
  </form>

  <br/>
  <br/>
  <br/>
  <table class="table table-striped">
    <tr>
      <th colspan="3">Title</th>
    </tr>
    <%= render @books %>
  </table>
  <%= will_paginate @books %>
</div>
</div>
</div>
